{
  "name": "my-api",

  "proxy": {
    "context_path": "/my-api",
    "target": "http://localhost:1234",
    "strip_context_path": false
  },

  "paths": {
    "/users/*": [
      {
        "methods": ["GET"],
        "ratelimit": {
          "enabled": false
        }
      },
      {
        "methods": ["POST"],
        "rate-limit": {
          "rate": 50,
          "per": 60,
          "unit": "SECOND"
        }
      }
    ],
    "/users/{id}": [
      {
        "methods": ["GET"],
        "transform": [
          {
            "delete_headers": [
              "authorization"
            ],
            "add_headers": {
              "x-widgets-secret": "th-secret-widget-key-is-secret"
            }
          },
          {
            "delete_headers": [
              "authorization"
            ],
            "add_headers": {
              "x-widgets-secret": "th-secret-widget-key-is-secret"
            }
          }
        ]
      }
    ]
  }
}